<h1>Editing Book</h1>

<% if @book.errors.any? %>
	<div class="error_explanatation">
		<h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>

		<ul>
		<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@book, url: "/books/#{@book.id}") do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<div>
		<%= f.submit 'Update Book' %>
	</div>

<% end %>

<P><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></P>